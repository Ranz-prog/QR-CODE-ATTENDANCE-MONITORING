<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recyclerBg"
    tools:context=".PackageForms.CreateDate">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_toolbar"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/create_date_graphics"/>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDate"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"/>

            <ImageButton
                android:id="@+id/btnSelectDate"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button_1"
                android:src="@drawable/ic_date_range_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddDate"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_1"
        android:textAllCaps="false"
        android:text="Add"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressAddDate"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>